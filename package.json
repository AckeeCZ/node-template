{
  "name": "node-template",
  "description": "node-template",
  "version": "3.0.0",
  "author": "Jiri Smolik <jiri.smolik@ackee.cz>",
  "contributors": [
    "Jaroslav Šmolík <grissius@gmail.com>"
  ],
  "engines": {
    "node": "^12.16.3"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r source-map-support/register dist/index.js",
    "start-lr": "tsc-watch --onSuccess \"npm run start\"",
    "test": "jest --colors --detectOpenHandles --forceExit",
    "test-lr": "npm run test -- --watch",
    "cover": "npm run test -- --collectCoverage",
    "ci-test": "npm run cover -- --reporters=default --reporters=jest-junit --ci",
    "ci-lint": "tslint -p . --force -t checkstyle -o ./output/checkstyle-result.xml",
    "lint": "tslint -p . -t codeFrame",
    "check": "npm-check -i app -i errors -i config -i index; exit 0",
    "check-win": "npm-check -i app -i errors -i config -i index & exit 0",
    "pretty": "prettier --write \"src/**/*.ts\""
  },
  "jest-junit": {
    "outputDirectory": "output",
    "outputName": "./test.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " > ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "configuru": "^0.4.0",
    "cosmas": "^2.0.0-beta.6",
    "lodash": "^4.17.15",
    "node-healthz": "^1.0.1",
    "npm-run-series": "^1.0.1",
    "source-map-support": "^0.5.19",
    "unicore": "^0.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.153",
    "@types/node": "^12.12.42",
    "@types/supertest-as-promised": "^2.0.38",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.6",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.5",
    "prettier-config-ackee": "0.0.13",
    "supertest": "^4.0.2",
    "supertest-as-promised": "^4.0.2",
    "ts-jest": "^26.0.0",
    "tsc-watch": "^4.2.8",
    "tslint": "^5.20.1",
    "tslint-config-ackee": "^0.3.0",
    "typescript": "^3.9.3"
  }
}
